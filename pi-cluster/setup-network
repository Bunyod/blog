#!/bin/sh

# basic interfaces
cp interfaces /etc/network/
/etc/init.d/networking restart

# DHCP server
cp /etc/dhcpd/dhcpd.conf /etc/dhcpd/dhcpd.conf.old
cp dhcpd.conf /etc/dhcpd/
/etc/init.d/isc-dhcp-server restart

# NAT routing
echo 1 > /proc/sys/net/ipv4/ip_forward
echo "net.ipv4.ip_forward=1" >> /etc/sysctl.conf
iptables -t nat -A POSTROUTING -o eth1 -j MASQUERADE
# TODO: add more rules here for extra security...

ifdown eth1 && sudo ifup eth1
iptables-save > /etc/iptables.ip.rules

cp iptables /etc/network/if-pre-up.d/
chown root:root /etc/network/if-pre-up.d/iptables
chmod 755 /etc/network/if-pre-up.d/iptables

reboot

# eof

